{
	"name":              "dreamfactory/sandman",
	"description":       "DreamFactory Services Platform(tm) Command Line Tool",
	"config":            {
		"discard-changes": true
	},
	"homepage":          "https://github.com/dreamfactorysoftware/sandman",
	"keywords":          ["dsp", "dsp-core", "dsp-cli"],
	"license":           ["Apache-2.0"],
	"require":           {
		"php":                    ">=5.4.0",
		"kisma/kisma":            "~0.2@stable",
		"symfony/console":        "~2.4@stable",
		"symfony/monolog-bridge": "!2.4@stable"
	},
	"require-dev":       {
		"phpunit/phpunit": "~3.7@stable"
	},
	"autoload":          {
		"psr-4": {
			"DreamFactory\\Sandman\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"extra":             {
		"branch-alias": {
			"dev-develop": "0.1.x-dev"
		}
	}
}
